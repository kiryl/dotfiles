"" GUI:
" - separate command line, always on
" - separate message line
" - no scroll bars
" - status bar
set guioptions=CMcs

" color theme
colorscheme solarized-dark

" Hide tab line
set showtabline=never

" Highlight search
set hlfind

" Incremental search
set incfind

" Do not close the browser if last tab is closed
set! browser.tabs.closeWindowWithLastTab=false

" Disable newtab
set! browser.newtabpage.enabled=false

" Disable smooth scroll
set! general.smoothScroll=false

" Download settings
set! browser.download.dir=/home/kas/tmp
set! browser.download.folderList=2
set! browser.download.manager.showWhenStarting=false

""
" Pass through

" Feedly
set passkeys+='feedly.com':jkJKrvmAs<Space>

" G+
set passkeys+='plus\.google\.com':jkr<Space>

" vim: ft=vim
