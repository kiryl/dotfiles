#!/bin/sh -e

exec > ~/.xsession-errors 2>&1

export SSH_ASKPASS=x11-ssh-askpass
eval "$(ssh-agent)"
xrdb -merge ~/.Xresources
setxkbmap -layout us,ru,by
setxkbmap -option grp:ctrl_shift_toggle,grp_led:scroll,grp:switch,terminate:ctrl_alt_bksp
autocutsel -s PRIMARY &
autocutsel &
socat UNIX-LISTEN:"$HOME/var/pbcopy",unlink-early,fork EXEC:'xsel --nodetach -i' &
socat UNIX-LISTEN:"$HOME/var/pbpaste",unlink-early,fork EXEC:'xsel -o -b' &
awesome --no-argb
